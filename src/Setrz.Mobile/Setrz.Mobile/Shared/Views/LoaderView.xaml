<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Setrz.Mobile.Shared.ViewModels"
             x:Class="Setrz.Mobile.Shared.Views.LoaderView"
             x:DataType="viewModels:LoaderViewModel"
             BindingContext="{viewModels:LoaderViewModel}">
    
    <Grid IsVisible="{Binding IsGlobalBusy}" 
          InputTransparent="{Binding IsGlobalBusy}"
          ZIndex="99"
          HorizontalOptions="FillAndExpand" 
          VerticalOptions="FillAndExpand">
        
        <BoxView BackgroundColor="{StaticResource Black}" Opacity="0.5" />
        
        <ActivityIndicator IsRunning="{Binding IsGlobalBusy}"
                           Color="{StaticResource Primary}"
                           Scale="2"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
    </Grid>
</ContentView>